{{ header }}

<div class="centralbox">
		<div id="account-account" class="container">
			<div class="container-inner">

	{{ content_top }}
	
	<header class="page-header">
		<h1>{{ heading_title }}</h1>
	</header>

	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>

	{% if success %}
		<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
	{% endif %}

	{% if column_left and column_right %}
		{% set class = 'col-sm-6 middle sideleft' %}
	{% elseif column_left or column_right %}
		{% set class = 'col-sm-9' %}
	{% else %}
		{% set class = 'col-sm-12' %}
	{% endif %}
	
	<div class="row">

		{{ column_left }}

		<div id="content" class="{{ class }}">

			<div class="mainborder">

				<div class="row">

					<div class="col-sm-6">
					
						<div class="contentset">
							<h4 class="inner"><span><i class="fa fa-user"></i>	{{ text_my_account }}</span></h4>
						</div>

						<ul class="list-unstyled">
							<li><a href="{{ edit }}">{{ text_edit }}</a></li>
							<li><a href="{{ password }}">{{ text_password }}</a></li>
							<li><a href="{{ address }}">{{ text_address }}</a></li>
							<li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
						</ul>

					</div>

					<div class="col-sm-6">
						
						<div class="contentset">
							<h4 class="inner"><span><fa class="fa fa-bookmark"></fa> {{ text_my_orders }}</span></h4>
						</div>

						<ul class="list-unstyled">
							<li><a href="{{ order }}">{{ text_order }}</a></li>
							<li><a href="{{ download }}">{{ text_download }}</a></li>
							{% if reward %}
							<li><a href="{{ reward }}">{{ text_reward }}</a></li>
							{% endif %}
							<li><a href="{{ return }}">{{ text_return }}</a></li>
							<li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
							<li><a href="{{ recurring }}">{{ text_recurring }}</a></li>
						</ul>

					</div>
				
				</div>

				<div class="row">

					<div class="col-sm-6">
						{% if credit_cards %}

							<div class="contentset">
								<h4 class="inner"><span><i class="fa fa-credit-card"></i> {{ text_credit_card }}</span></h4>
							</div>

							<ul class="list-unstyled">
								{% for credit_card in credit_cards %}
									<li><a href="{{ credit_card.href }}">{{ credit_card.name }}</a></li>
								{% endfor %}
							</ul>
							{% endif %}
					</div>

					<div class="col-sm-6">

						<div class="contentset">
							<h4 class="inner"><span><i class="fa fa-tag"></i> {{ text_my_affiliate }}</span></h4>
						</div>

						<ul class="list-unstyled">
							{% if not tracking %}
							<li><a href="{{ affiliate }}">{{ text_affiliate_add }}</a></li>
							{% else %}
							<li><a href="{{ affiliate }}">{{ text_affiliate_edit }}</a></li>
							<li><a href="{{ tracking }}">{{ text_tracking }}</a></li>
							{% endif %}
						</ul>

						<div class="contentset">
							<h4 class="inner"><span><i class="fa fa-envelope"></i> {{ text_my_newsletter }}</span></h4>
						</div>
						<ul class="list-unstyled">
							<li><a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
						</ul>
					</div>
					
				</div>

			</div>

		</div> <!-- #content -->

		{{ column_right }}

	</div>

	{{ content_bottom }}
	
{{ footer }}