{% if reviews %}
	
	{% for review in reviews %}
		<article class="single">
			<div class="review">
			{% for i in 1..5 %}
				{% if review.rating < i %}
				<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
				{% else %}
				<span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
				{% endif %}
			{% endfor %}
			</div>
			<p><span class="author">{{ review.author }}</span>
			<span class="review-date">{{ review.date_added }}</span></p>
			<div class="review-text">{{ review.text }}</div>
			
		</article>
	{% endfor %}

	{% if pagination %}<div class="pagination">{{ pagination }}</div>{% endif %}

{% else %}

	<div class="empty white">
		<div class="note-light">{{ text_no_reviews }}</div>
	</div>

{% endif %}