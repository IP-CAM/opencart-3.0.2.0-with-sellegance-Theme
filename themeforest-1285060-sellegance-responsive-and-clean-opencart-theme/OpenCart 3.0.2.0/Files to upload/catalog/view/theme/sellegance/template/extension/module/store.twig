<div class="box">

	<div class="contentset center">
		<h4 class="inner"><span>{{ heading_title }}</span></h4>
	</div>

	<div class="box-content">

		<p>{{ text_store }}</p>

		{% for store in stores %}
	  {% if store.store_id == store_id %}<a href="{{ store.url }}"><b>{{ store.name }}</b></a><br />
	  {% else %}<a href="{{ store.url }}">{{ store.name }}</a><br />
	  {% endif %}
	  {% endfor %}<br />

	</div> <!-- .box-content -->

</div>
