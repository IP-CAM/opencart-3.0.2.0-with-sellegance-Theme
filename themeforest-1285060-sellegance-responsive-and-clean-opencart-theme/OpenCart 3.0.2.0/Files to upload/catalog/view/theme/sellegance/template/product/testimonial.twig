{{ header }}

<div class="centralbox">
		<div class="container">
			<div class="container-inner">

	{{ content_top }}

	<header class="page-header">
		<h1>{{ heading_title }}</h1>
	</header>

	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>

	{% if column_left and column_right %}
		{% set class = 'col-sm-6 middle sideleft' %}
	{% elseif column_left or column_right %}
		{% set class = 'col-sm-9' %}
	{% else %}
		{% set class = 'col-sm-12' %}
	{% endif %}

	<div class="row">

		{{ column_left }}
		
		<div id="content" class="{{ class }} testimonials-page" role="main">

			<div class="mainborder">

			
			{% if testimonials %}
		
				{% for testimonial in testimonials %}
				
					<div class="testimonial_list">
						<span class="heading">{{ testimonial.title }}</span>
						<div class="review">{{ testimonial.description }}</div>

						{% if testimonial.rating %}
						<div class="rating r{{ testimonial.rating }}">
							<i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
						</div>
						{% endif %}
						
						<div class="testimonial_author">
							{{ testimonial.name }}, <span class="city">{{ testimonial.city }}</span>
						</div>
						
					</div>

				{% endfor %}

				{% if pagination %}
					<div class="pagination">{{ pagination }}</div>
					<div class="buttons">
						<a class="btn btn-primary" href="{{ write_url }}" title="{{ write }}">{{ write }}</a>
					</div>
				{% endif %}

				
				<div class="buttons">
					{% if showall_url %}
					<a class="btn btn-default" href="{{ showall_url }}" title="{{ showall }}">{{ showall }}</a>
					{% endif %}
					<a class="btn btn-primary" href="{{ write_url }}" title="{{ write }}">{{ write }}</a>
				</div>
				
			{% endif %}
			
			</div>

		</div> <!-- #content -->
		
		{{ column_right }}

	</div> <!-- .row -->

	{{ content_bottom }}

{{ footer }}