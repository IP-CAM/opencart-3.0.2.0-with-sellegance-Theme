							<div class="form-group">
								<label class="col-sm-2 control-label" for="sellegance_store_id">{{ entry_store }}</label>
								<div class="col-sm-10 ">
									<select name="sellegance_store_id" id="sellegance_store_id" class="form-control input">
										{% for store in stores %}
										<option value="{{ HTTPS_SERVER }}index.php?route=extension/module/sellegance&store_id={{ store.store_id }}&user_token={{ user_token }}" {% if store_id == store.store_id %} selected="selected" {% endif %}>
											{{ store.name }}
											</option>
										{% endfor %}
									</select>
								</div>
							</div>					

							<script type="text/javascript">
								$(document).ready(function (){
									$("#sellegance_store_id").bind("change", function() {
										window.location = $(this).val();
									});
								});
							</script>

						{% endif %}

					</div>
				</div>

